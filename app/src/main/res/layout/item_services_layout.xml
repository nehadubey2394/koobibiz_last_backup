<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingRight="5dp">

    <TextView
        android:id="@+id/tvBizTypeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:maxWidth="240dp"
        android:layout_marginTop="2dp"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_bold"
        />

    <LinearLayout
        android:id="@+id/llCategory"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="7dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="@drawable/black_circle"/>

        <TextView
            android:id="@+id/tvCategoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:maxWidth="240dp"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/roboto_medium"
            />

    </LinearLayout>

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="4dp"/>

    <com.daimajia.swipe.SwipeLayout
        android:layout_width="match_parent"
        android:id="@+id/sample1"
        android:layout_height="45dp"
        android:footerDividersEnabled="false"
        android:layout_gravity="center_vertical"
        app:clickToClose="true">

        <LinearLayout
            android:tag="side1"
            android:id="@+id/right_swipe_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/ivEdit"
                android:src="@drawable/edit_ico"
                android:layout_width="50dp"
                android:background="@color/gray"
                android:padding="12dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/ivRemove"
                android:src="@drawable/delete_ico"
                android:layout_width="50dp"
                android:background="@color/red"
                android:padding="12dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlItem"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:layout_gravity="center_vertical"
            >

            <View
                android:id="@+id/view"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_gray_solid"/>

            <TextView
                android:id="@+id/tvServiceTitle"
                android:layout_toRightOf="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray"
                android:maxWidth="100dp"
                android:textSize="14sp"
                android:text="brown color"
                android:maxLines="1"
                android:maxLength="100"
                android:ellipsize="end"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/roboto_regular"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvServiceTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:maxWidth="90dp"
                    android:textSize="14sp"
                    android:text="10 hr 30 min"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/roboto_regular"
                    />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:maxWidth="240dp"
                    android:textSize="14sp"
                    android:text="Â£50"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/roboto_regular"
                    />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:background="@drawable/back_icon"
                    android:visibility="visible" />

            </LinearLayout>

        </RelativeLayout>

    </com.daimajia.swipe.SwipeLayout>

    <View
        android:id="@+id/viewLine2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/gray_line"
        />

</LinearLayout>
