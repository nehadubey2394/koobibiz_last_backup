<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true">

    <include
        android:id="@+id/headerLayout"
        layout="@layout/header_layout_for_allscreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnContinue"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/headerLayout"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/booking_type"
                        android:textColor="@color/text_color" />

                    <TextView
                        android:id="@+id/tvBookingType"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
                        android:hint="@string/booking_type"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/gray" />


                </LinearLayout>

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:background="@drawable/back_icon"
                    android:visibility="gone" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="4dp"
                android:background="@color/gray_line" />


            <TextView
                android:fontFamily="@font/roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:text="@string/business_name"
                android:textColor="@color/text_color" />


            <EditText
                android:id="@+id/etBusinessName"
                android:fontFamily="@font/roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:background="@null"
                android:ems="18"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="@string/business_name"
                android:text=""
                android:inputType="textPersonName"
                android:imeOptions="actionDone"
                android:textColor="@color/gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="4dp"
                android:background="@color/gray_line" />

            <TextView
                android:fontFamily="@font/roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:gravity="center_vertical"
                android:maxWidth="240dp"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:text="@string/business_email"
                android:textColor="@color/text_color" />


            <TextView
                android:id="@+id/tvEmail"
                android:fontFamily="@font/roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:gravity="center_vertical"
                android:maxWidth="240dp"
                android:textSize="14sp"
                android:ems="18"
                android:maxLines="1"
                android:text=""
                android:hint="@string/business_email"
                android:textColor="@color/gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="4dp"
                android:background="@color/gray_line" />

            <TextView
                android:fontFamily="@font/roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:gravity="center_vertical"
                android:maxWidth="240dp"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:text="@string/biz_contact_number"
                android:textColor="@color/text_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvCountryCode"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:hint="+1"
                    android:text=""
                    android:textColor="@color/gray" />

                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_marginLeft="5dp"
                    android:text="-"
                    android:textColor="@color/gray" />


                <TextView
                    android:id="@+id/tvContactNo"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:ems="18"
                    android:inputType="number"
                    android:maxLines="1"
                    android:hint="@string/contact_number"
                    android:text=""
                    android:textColor="@color/gray" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="4dp"
                android:background="@color/gray_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="52dp"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toLeftOf="@+id/ivArreow"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/business_location_address"
                        android:textColor="@color/text_color" />

                    <TextView
                        android:id="@+id/tvBizAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:hint="@string/business_location_address"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/gray" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/ivArreow"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:background="@drawable/back_icon"
                    android:visibility="gone" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="4dp"
                android:background="@color/gray_line" />

            <RelativeLayout
                android:id="@+id/rlRadius"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/radius_of_area_coverage"
                        android:textColor="@color/text_color" />

                    <TextView
                        android:id="@+id/tvRadius"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
                        android:hint="@string/radius_of_area_coverage"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/gray" />


                </LinearLayout>

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:background="@drawable/back_icon"
                    android:visibility="gone" />


            </RelativeLayout>

            <View
                android:id="@+id/radiusLine"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="4dp"
                android:background="@color/gray_line" />

            <RelativeLayout
                android:id="@+id/rlserviceBreak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="52dp"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/service_break"
                        android:textColor="@color/text_color" />

                    <TextView
                        android:id="@+id/tvInCallBreakTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:visibility="gone"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/service_break"
                        android:textColor="@color/text_color" />

                    <TextView
                        android:id="@+id/tvOutCallBreakTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:visibility="gone"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/service_break"
                        android:textColor="@color/text_color" />


                </LinearLayout>

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:background="@drawable/back_icon"
                    android:visibility="visible" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="4dp"
                android:background="@color/gray_line" />


        </LinearLayout>


    </ScrollView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        style="@style/My_Button.Invert"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="@string/save_continue"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        />

</RelativeLayout>