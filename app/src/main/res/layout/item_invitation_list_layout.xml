<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:clickToClose="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivBusinessProfile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        app:civ_border_width="2dp"
        android:layout_centerVertical="true"
        android:src="@drawable/defoult_user_img"
        android:background="@drawable/gradient_circle_img_with_stroke"
        app:civ_border_color="@color/transparent"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/ivAerow"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ivBusinessProfile"
        >

        <TextView
            android:id="@+id/tvBusinessName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text=""
            android:layout_marginLeft="4dp"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvBizType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivAerow"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:rotation="180"
        android:layout_marginRight="5dp"
        android:background="@drawable/back_icon"
        android:visibility="visible" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line"
        android:layout_alignParentBottom="true"
       />

</RelativeLayout>
