<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlHeader1"
    android:background="@color/screen_bg_color">

    <LinearLayout
        android:id="@+id/lyHeaderContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp"
            android:id="@+id/topLayout1"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivHeaderBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/white_back_ico"
                    android:tint="@color/text_color"
                    android:padding="3dp"
                    />


                <TextView
                    style="@style/TextView.Bold"
                    android:id="@+id/tvHeaderTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/appoinment"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/roboto_bold"/>


            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tvBuisnessName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="12dp"
            android:paddingLeft="2dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/text_color"
            />

            <LinearLayout
                android:id="@+id/lyArtistDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivHeaderProfile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:civ_border_width="1dp"
                    android:src="@drawable/defoult_user_img"
                    app:civ_border_color="@color/white"
                    />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/text_color"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:maxWidth="180dp"
                    android:layout_marginLeft="8dp"
                    android:ems="10"
                    android:ellipsize="end"
                    android:text="@string/appoinment"
                    android:maxLines="1"/>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnComplete"
                    style="@style/My_Button_Small.Invert"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:text="@string/complete_booking"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="5dp"
                    android:textSize="12sp"

                    />

            </LinearLayout>

    </LinearLayout>


