<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp"
    android:id="@+id/topLayout1"
    >
    <RelativeLayout
        android:id="@+id/rlHeader1"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:paddingLeft="3dp"
        android:paddingRight="3dp">

        <ImageView
            android:id="@+id/ivHeaderBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/back_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <Spinner
            android:id="@+id/spBizName"
            android:overlapAnchor="false"
            android:background="@null"
            android:popupBackground="@color/white"
            android:textColor="@color/text_color"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:prompt="@string/business_type"
            />


        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/_220sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/title_bookings"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/text_color"
            android:layout_centerInParent="true"/>


        <ImageView
            android:id="@+id/ivDropDown"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:padding="2dp"
            android:visibility="gone"
            android:clickable="false"
            android:layout_toRightOf="@+id/tvHeaderTitle"
            android:layout_marginLeft="5dp"
            android:src="@drawable/drop_down_ico"
            android:layout_marginTop="20dp"
             />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_back_ico"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

