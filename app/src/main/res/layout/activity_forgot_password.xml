<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/white_back_ico"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/lock_ico"/>

            <TextView
                android:id="@+id/tvForgotPassword"
                style="@style/TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="5dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Trouble logging in?"
                android:textColor="@drawable/tv_selector" />

            <TextView
                style="@style/TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/enter_your_username_or_email"
                android:textColor="@drawable/tv_selector" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="26dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:padding="10dp">



                <EditText
                    android:id="@+id/ed_username"
                    style="@style/My_Edittext"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@null"
                    android:hint="@string/email_or_username"
                    android:inputType="textPersonName" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:layout_marginStart="5dp" />

            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_submit"
                android:layout_width="290dp"
                android:layout_height="40dp"
                style="@style/My_Button"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="@string/submit" />

            <LinearLayout
                android:id="@+id/ly_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView"
                    android:layout_width="wrap_content"
                    android:id="@+id/createNewAccount"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_height="wrap_content"
                    android:text="Already have an account?" />

                <TextView
                    style="@style/TextView.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/createaccount"
                    android:text="Sign in"
                    android:textSize="16sp"
                    android:layout_marginStart="3dp" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
