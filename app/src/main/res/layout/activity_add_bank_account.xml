<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".modules.profile.activity.AddBankAccountActivity">

    <include
        android:id="@+id/headerLayout"
        layout="@layout/actionbar_fill_business_profile"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_above="@+id/llBottom"
        android:layout_below="@+id/headerLayout"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto_medium"
                android:text="75% Completed"/>

            <include
                layout="@layout/layout_new_profile_setup_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Add Your Bank Account"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:paddingLeft="@dimen/margin_left"
                android:paddingRight="@dimen/margin_right"
                android:paddingEnd="@dimen/margin_right"
                android:paddingStart="@dimen/margin_left"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/it_is_a_long_established_fact_that_a_reader_will_bedistracted_by_the_readable"
                android:gravity="center"/>

            <View
                android:id="@+id/topLine"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:background="@color/gray_line"
                >
            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="@string/first_name_req" />

            <EditText
                android:id="@+id/ed_firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:hint="First Name"
                android:maxLines="1"
                android:background="@null"
                android:singleLine="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@color/gray_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="Last Name*"

                />

            <EditText
                android:id="@+id/ed_lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:hint="Last Name"
                android:maxLines="1"
                android:background="@null"
                android:singleLine="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@color/gray_line"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="@color/black"

                android:text="Sort code*"

                />

            <EditText
                android:id="@+id/ed_sortCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:hint="Sort code"
                android:maxLines="1"
                android:background="@null"
                android:maxLength="15"
                android:singleLine="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@color/gray_line"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="@color/black"

                android:text="Account Number*" />

            <EditText
                android:id="@+id/ed_accountNumber"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:hint="Account Number"
                android:maxLines="1"
                android:background="@null"
                android:singleLine="true"
                android:maxLength="25"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@color/gray_line"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="@color/black"
                android:layout_marginBottom="6dp"
                android:text="This Bank Details will be securely saved for a faster payment experience."
                android:visibility="visible" />


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_left26"
        android:layout_marginRight="@dimen/margin_right26"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_addAccount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            style="@style/My_Button.Invert"
            android:text="@string/continue_txt"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/tvSkip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/skip"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/gray"
            android:padding="5dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>


</RelativeLayout>