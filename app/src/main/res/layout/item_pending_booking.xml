<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        android:padding="2dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/gradient_circle_img_with_stroke"
            android:src="@drawable/defoult_user_img"
            app:civ_border_color="@color/transparent"
            app:civ_border_width="1.5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStaffName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:ems="9"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="Jamie Bloggs"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:text="Henry"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:text="Hair brown color"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvServiceDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:text="28/11/2018 3:30pm - 4:00pm"
                android:textColor="@color/grey"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="end|center_vertical"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/tvBDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:gravity="end"
                android:maxLines="2"
                android:text="27/11/2019"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvBTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:gravity="end"
                android:maxLines="2"
                android:text="10:00"
                android:textColor="@color/grey"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <Button
            android:id="@+id/btnAccept"
            style="@style/My_Button_Primary"
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:text="@string/text_accept"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <Button
            android:id="@+id/btnReject"
            style="@style/My_Button_Red"
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@+id/btnAccept"
            android:text="@string/text_reject"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <Button
            android:id="@+id/btnReSchedule"
            style="@style/My_Button_Primary"
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/btnReject"
            android:padding="2dp"
            android:text="@string/reschedule"
            android:textSize="10sp"
            android:visibility="gone"
            tools:ignore="SmallSp" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray_line" />

</LinearLayout>



