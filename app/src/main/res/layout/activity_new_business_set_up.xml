<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    tools:context=".modules.profile_setup.activity.NewBusinessSetUpActivity">

    <include
        android:id="@+id/headerLayout"
        layout="@layout/actionbar_fill_business_profile"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnContinue"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/headerLayout"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headerLayout"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="0% Completed"/>

                <include
                    layout="@layout/layout_new_profile_setup_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/set_up_your_basic_info"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:paddingLeft="@dimen/margin_left"
                    android:paddingRight="@dimen/margin_right"
                    android:paddingEnd="@dimen/margin_right"
                    android:paddingStart="@dimen/margin_left"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/it_is_a_long_established_fact_that_a_reader_will_bedistracted_by_the_readable"
                    android:gravity="center"/>

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/llProgress"
                android:background="@color/gray_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxWidth="240dp"
                    android:textSize="14sp"
                    android:text="@string/first_name"
                    android:textColor="@color/text_color" />


                <EditText
                    android:id="@+id/etFirstName"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:maxWidth="240dp"
                    android:textSize="14sp"
                    android:background="@null"
                    android:ems="18"
                    android:maxLines="1"
                    android:hint="@string/first_name"
                    android:inputType="textPersonName"
                    android:text=""
                    android:imeOptions="actionDone"
                    android:textColor="@color/gray" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/gray_line" />


                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxWidth="240dp"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:text="@string/last_name"
                    android:textColor="@color/text_color" />


                <EditText
                    android:id="@+id/etLastName"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:maxWidth="240dp"
                    android:textSize="14sp"
                    android:background="@null"
                    android:ems="18"
                    android:maxLines="1"
                    android:hint="@string/last_name"
                    android:text=""
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone"
                    android:textColor="@color/gray" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/gray_line" />


                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxWidth="240dp"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:text="@string/username"
                    android:textColor="@color/text_color" />


                <TextView
                    android:id="@+id/tvUserName"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:maxWidth="240dp"
                    android:textSize="14sp"
                    android:ems="18"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/gray" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/gray_line" />


                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxWidth="240dp"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:text="@string/prompt_email"
                    android:textColor="@color/text_color" />


                <TextView
                    android:id="@+id/tvEmail"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:maxWidth="240dp"
                    android:textSize="14sp"
                    android:ems="18"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/gray" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/gray_line" />

                <RelativeLayout
                    android:id="@+id/rlDob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:maxWidth="240dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/date_of_birth"
                            android:textColor="@color/text_color" />

                        <TextView
                            android:id="@+id/tvDob"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:maxWidth="240dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/gray" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:rotation="180"
                        android:background="@drawable/back_icon"
                        android:visibility="visible" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/gray_line" />

                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxWidth="240dp"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:text="@string/contact_number"
                    android:textColor="@color/text_color" />


                <TextView
                    android:id="@+id/tvContactNo"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:maxWidth="240dp"
                    android:textSize="14sp"
                    android:ems="18"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/gray" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/gray_line" />



            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        style="@style/My_Button.Invert"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="@string/continue_txt"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        />

</RelativeLayout>